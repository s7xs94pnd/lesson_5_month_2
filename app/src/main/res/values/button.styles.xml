<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basic.btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="cornerRadius">100dp</item>
    </style>
    <style name="gray.btn" parent="basic.btn">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="orangr.btn" parent="basic.btn">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark.gray.btn" parent="basic.btn">
        <item name="backgroundTint">@color/Dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>